.page-not-found
  .page-not-found-content
    display flex
    align-items center
    justify-content center
    background url('./images/404-bg.jpg') repeat-x

    .page-not-found-content-title
      color #333

    .page-not-found-content-description
      color #666

  @media screen and (max-width: 720px)
    .page-not-found-content
      min-height 200px

      .page-not-found-content-image
        max-width 100px
        margin-right 10px

      .page-not-found-content-title
        margin 10px 0
        font-size 14px

      .page-not-found-content-description
        font-size 12px

  @media screen and (min-width: 721px) and (max-width: 1199px)
    .page-not-found-content
      min-height 300px

      .page-not-found-content-image
        max-width 180px
        margin-right 30px

      .page-not-found-content-title
        margin 10px 0
        font-size 20px

      .page-not-found-content-description
        font-size 14px

  @media screen and (min-width: 1200px)
    .page-not-found-content
      min-height 500px

      .page-not-found-content-image
        max-width 260px
        margin-right 50px

      .page-not-found-content-title
        margin 20px 0
        font-size 24px

      .page-not-found-content-description
        font-size 16px